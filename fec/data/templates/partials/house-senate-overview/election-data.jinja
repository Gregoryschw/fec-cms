{% import 'macros/null.jinja' as null %}
{% import 'macros/disclaimer.jinja' as disclaimer %}
{% import 'macros/cycle-select.jinja' as select %}

<!-- TODO: if we end up using these patterns, move styles to `components/_cycle-select.scss` or wherever appropriate -->
<style>
.range__select {
    width: auto;
    display: inline-block;
}
.range__select .cycle-select select {
    width: auto;
}

#contributions-over-time h3 {
 display: inline;

}

#contributions-over-time span.js-direction {
  font-style: italic

}

/* TODO: DONT USE JS- PREFIXED CLASSES IN CSS */
.js-across-time {
  margin: 5px 0  15px 0;
}

.simple-table--responsive {
  display: flex;

}

.simple-table--responsive .simple-table__cell {
    display: inline;
    margin-right: 25px;
    vertical-align: baseline;
    height: 4rem;
}

meter {
    height: 4rem;
    vertical-align: middle;
    width: 200px;
    background: transparent;
    /* border-radius: 0px; */
}
meter::-webkit-meter-bar {
 background: #eee;
  /* box-shadow: 0 2px 3px rgba(0,0,0,0.2) inset;*/
  border-radius: 3px;
}
meter::-webkit-meter-optimum-value  {
  background: #36bdbb;
}

::-moz-meter-bar {

  background: #eee;
  height: 2rem;
  display: inline-block;
  background: #eee;
  overflow: clip;
  margin-bottom: 1rem;
  

}

:-moz-meter-optimum::-moz-meter-bar {
  background: #36bdbb;
  height: 2rem;
}
